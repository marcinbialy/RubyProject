 <div class="card" data-id="<%= portfolio_item.id %>">
    <%= image_tag portfolio_item.thumb_image.to_s unless portfolio_item.thumb_image.to_s.nil? %>
    <p class="card-text">
    	<span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span> <%= portfolio_item.subtitle %>
    </p>
    <p><%= link_to "Edit", edit_portf_path(portfolio_item) if logged_in?(:site_admin) %>
 	<%= link_to "Delete", portf_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></p>
 </div>