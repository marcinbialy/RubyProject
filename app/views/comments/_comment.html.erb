<div class="comment-card">
  	<div class="card">
  		<div class="card-block">
  			<div class="row margin-custom">
  				<div class="col-md-2">
              <%= gravatar_helper comment.user %>
          </div>
  				<div class="col-md-10">
            <div>
              <b><%= comment.user.name %></b> | <small>Published <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago</small>
            </div>
            <div>
              <%= comment.content %>
            </div>
  				</div>
  			</div>
  		</div>
  	</div>
  </div>